@model ShoppingCart
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Shopping Cart</h2>
<hr />

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Movie</th>
            <th>Price</th>
        </tr>
    </thead>
    @foreach (var movie in Model.ShoppingCartItems)
    {
        <tr>
            <td class="text-left">@movie.Movie.Title</td>
            <td class="text-right">@movie.Price</td>
        </tr>
    }

    <tr>
        <td><b>Total</b></td>
        <td class="text-right"><b>@Model.GetShoppingCartTotal()</b></td>
    </tr>
</table>
<a asp-controller="ShoppingCart"
   asp-action="ClearShoppingCart"
   class="btn btn-primary">Clear Cart</a>
<a asp-controller="Movie"
   asp-action="List"
   class="btn btn-primary">Back To Catalog</a>